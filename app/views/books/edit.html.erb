<body>
  <main>
    <h4>Editing Book</h4>
    <div class = "edit_form">
      <%= form_with model: @book ,local: true do |f| %>
      <h4>Title</h4>
     <%= f.text_field :title %>
     <h4>Body</h4>
     <%=f.text_area :body %>
     <%=f.submit 'update book' %>
     <% end %>
    </div>
    <span><%= link_to "Show |", book_path(@book.id) %></span>
    <span><%= link_to "Back", books_path %></span>
  </main>
</body>