<body>
 <main>
  <h1><strong>Bookers_0</strong></h1>
  <table class= "table-content">
   <thead>
    <th>Title</th>
    <th>body</th>
   </thead>
   <tbody>
    <% @books.each do |book| %>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%=link_to "Show", book_path(book.id) %></td>
     <td><%=link_to "Edit", edit_book_path(book.id) %></td>
     <td><%=link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: "Are you sure"} %></td>
    <% end %>
   </tbody>
  </table>

  <% if @book.errors.any? %>
    <div class="alert">
       <% @book.errors.full_messages.each do | message| %>
        <p>error</p>
        <p><%= message %></p>
       <% end %>
    </div>
  <% end %>

  <div class = "new_form">
    <h2>New book</h2>
     <%= form_with model: @book, local: true do |f| %>
    <h4>Title</h4>
     <%= f.text_field :title %>
     <h4>Body</h4>
     <%=f.text_area :body %>
     <%=f.submit 'Create Book' %>
     <% end %>
  </div>
 </main>
</body>

